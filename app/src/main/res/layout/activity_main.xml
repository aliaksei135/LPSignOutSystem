<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/idleActTestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/flActTestButton"
        android:layout_alignParentEnd="true"
        android:text="Start Idle Activity" />

    <Button
        android:id="@+id/srButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/idleActTestButton"
        android:layout_alignParentEnd="true"
        android:text="Scanner Restart" />

    <Button
        android:id="@+id/flActTestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newUserTestButton"
        android:layout_alignParentEnd="true"
        android:text="Start FL Activity" />

    <Button
        android:id="@+id/newUserTestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="12dp"
        android:text="New User Test" />

    <Button
        android:id="@+id/manualSigningButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/manual_signing"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/initText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/manualSigningButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="99dp"
        android:gravity="center"
        android:text="@string/initText"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3" />

</RelativeLayout>
