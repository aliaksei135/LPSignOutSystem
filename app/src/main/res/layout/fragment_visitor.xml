<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/SelectionFragmentStyle"
    tools:context="com.aliakseipilko.signoutsystem.Fragments.stateVisitHouseFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:text="I am going to..."
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="48sp" />

    <Button
        android:id="@+id/visitorSignInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="180dp"
        android:text="Sign In" />

    <Button
        android:id="@+id/visitorSignOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/visitorSignInButton"
        android:layout_marginEnd="180dp"
        android:text="Sign Out" />

</RelativeLayout>